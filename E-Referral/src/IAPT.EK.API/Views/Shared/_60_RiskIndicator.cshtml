@namespace IAPT.EK.API.Views.Referral
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IAPT.EK.Business.EReferral.Models.eLongTermPhysicalHealth

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Long Term Physical Health Indicator</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped" width="100px">
            <tbody>
                <tr>
                    <td width="10px">Do you have a long-term physical health conditions/s?</td>
                    <td width="90px">@Model?.HasClientLTPH</td>
                </tr>
                <tr>
                    <td width="10px">Please provide details</td>
                    <td width="90px">@Model?.Details</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>