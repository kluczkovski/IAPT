@namespace IAPT.EK.API.Views.Referral
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IAPT.EK.Business.EReferral.Models.eRiskIndicator

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Risk Indicator</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped" width="100px">
            <tbody>
                <tr>
                    <td width="10px">Are there any risk indicators that you fell we need to know about?</td>
                    <td width="90px">@Model?.HasClientRisk</td>
                </tr>
                <tr>
                    <td width="10px">Please provide details</td>
                    <td width="90px">@Model?.Details</td>
                </tr>
                <tr>
                    <td width="10px">Suicide Risk (10 = highly likely and 0 = not likely at all)</td>
                    <td width="90px">@Model?.SuicideRisk</td>
                </tr>
                <tr>
                    <td width="10px">Self Harm Risk (10 = highly likely and 0 = not likely at all)</td>
                    <td width="90px">@Model?.SelfHarmRisk</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>