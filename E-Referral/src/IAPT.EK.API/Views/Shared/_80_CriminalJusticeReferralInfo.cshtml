@namespace IAPT.EK.API.Views.Referral
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IAPT.EK.Business.EReferral.Models.eClinicalReferralInfo

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Clinical Referral Information</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped" width="100px">
            <tbody>
                <tr>
                    <td width="10px">Are you referring into the clinical support services?</td>
                    <td width="90px">@Model?.ClinicalSupportService</td>
                </tr>
                <tr>
                    <td width="10px">Have you accessed Survivors Manchester before?</td>
                    <td width="90px">@Model?.AccessedSMBefore</td>
                </tr>
                <tr>
                    <td width="10px">If so what/when?</td>
                    <td width="90px">@Model?.SMBeforeWhen</td>
                </tr>
                <tr>
                    <td width="10px">Do you have a mental health diagnosis, given recently or at any point in time by a GP, psychiatrist, etc?</td>
                    <td width="90px">@Model?.HasMentalHealthDiag</td>
                </tr>
                <tr>
                    <td width="10px">if yes, please provide details:</td>
                    <td width="90px">@Model?.StatedMentalHealth</td>
                </tr>

                <tr>
                    <td width="10px">Have you previously accessed or are you currently accessing any other mental health service?</td>
                    <td width="90px">@Model?.AccessingService</td>
                </tr>

                <tr>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td>Service</td>
                                <td>Treatment Provided</td>
                                <td>Start Date</td>
                                <td>End Date</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>2</td>
                                <td>3</td>
                                <td>4</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>6</td>
                                <td>7</td>
                                <td>8</td>
                            </tr>
                        </tbody>
                    </table>
                </tr>
            </tbody>
        </table>
    </div>
</div>